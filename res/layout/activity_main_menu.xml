<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/bg"
    tools:context=".MainMenu" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
                
        <Button
            android:id="@+id/btn1main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search"

            android:drawablePadding="23dp"
           
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            
            android:layout_marginTop="1dp"
            
            android:textColor="@color/SuperBrown"

            android:textSize="30sp"
            android:background="@color/transparent_white_hex_3"
            android:gravity="left"
            android:text="@string/opt1"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <Button
            android:id="@+id/btn2main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search"

            android:drawablePadding="23dp"
           
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            
            android:layout_marginTop="1dp"
            
            android:textColor="@color/SuperBrown"

            android:textSize="30sp"
            android:gravity="left"
            android:background="@color/transparent_white_hex_3"
            android:text="@string/opt2"
            />
    </LinearLayout>
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        
        <Button
            android:id="@+id/btn3main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/user"

            android:drawablePadding="23dp"
           
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            
            android:layout_marginTop="1dp"
            
            android:textColor="@color/SuperBrown"

            android:textSize="30sp"
            android:gravity="left"
            android:background="@color/transparent_white_hex_3"
            android:text="@string/opt3"
            />
    </LinearLayout>
    
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        
        <Button
            android:id="@+id/btn4main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/pen"

            android:drawablePadding="23dp"
           
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            
            android:layout_marginTop="1dp"
            
            android:textColor="@color/SuperBrown"

            android:textSize="30sp"
            android:gravity="left"
            android:background="@color/transparent_white_hex_3"
            android:text="@string/opt4"
            />
    </LinearLayout>
    

</LinearLayout>